
.hengxian{
    margin-top: 20rpx;
    width: 100%;
    height: 8rpx;
   background:  #F4F4F4;
  }
  .item{
    position: relative;
    display: flex;
    margin-top: 20rpx;
    width: 100%;
    height: 170rpx;
    align-items: center;
  }
  .main{
    width: 400rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 25rpx;
  }
  .icon{
    margin-left: 30rpx;
    width: 150rpx;
    height: 150rpx;
  }
  .sname{
    margin-top: 15rpx;
  }
  .level{
    flex-wrap: nowrap;
    margin-top: 40rpx;
    font-size: 25rpx;
    color: #9f9f9fec;
  }
  .type{
    border: 3rpx solid #9f9f9fec;
    border-radius: 12%;
    margin-left: 8rpx;
  }
  .redu{
    width: 150rpx;
    position: absolute;
    right: 15rpx;
    height: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-wrap: nowrap;
    /* border: 1rpx #000 solid; */
  }
  .redu_text{
    color: #4cd137;
    display: block;
    font-weight: 600;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 35rpx;
  }
  .redu_numb{
    display: block;
    margin-left: 5rpx;
    font-size: x-small;
    color: #2f3640;
  }