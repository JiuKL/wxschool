.top{
  width: 100%;
  padding-top: 10rpx;
  padding-right: 5rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.top> .choose{
  height: 50rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border: 1rpx #bdc3c7 solid;
  box-shadow: 5rpx 5rpx 7rpx rgba(0, 0, 0, 0.1);
  border-radius: 5%;
  margin-left: 7rpx;
  padding: 5rpx 20rpx;
}
.choose > .title{
  font-size: xx-small;
}
.choose > picker{
  position: relative;
  left: 40rpx;
}
.top > .buttom{
  height: 50rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  border: 1rpx #bdc3c7 solid;
  box-shadow: 5rpx 5rpx 7rpx rgba(0, 0, 0, 0.1);
  border-radius: 5%;
  padding: 5rpx 15rpx;
}
.buttom > .text{
  margin-left: 20rpx;
  font-size: xx-small;
}
.buttom > .img{
  width: 40rpx;
  height: 100%;
  position: relative;
  top: -6rpx;
}
image{
  width: 100%;
  height: 100%;
}
.body{
  width: 100%;
}

