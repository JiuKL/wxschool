/* miniprogram/pages/main/user_type/user_type.wxss */
page{
    background-color: #f1f2f6;
}
.main{
    width: 85%;
    margin: auto;
    position: relative;
    top: 35rpx;
}
.title{
    width: 100%;
    height: 80rpx;
    font-size: 38rpx;
    font-weight: 700;
    letter-spacing:5rpx;
    /* border: 1rpx #000 solid; */
}
.main-item{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 55rpx;
    margin-top: 30rpx;
    position: relative;
    /* border: 1rpx #000 solid; */
}
.item-title{
    height: 80rpx;
    margin-top: 10rpx;
    font-weight: 500;
    font-size: 0.65rem;
    color: #222f3e;
    font-family: Arial, Helvetica, sans-serif;
}
picker{
    width: 100%;
    height: 100%;
}
.select-large{
    width: 100%;
    height: 85rpx;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    background-color: #FFF;
    border-radius: 18rpx;
    box-shadow: 0 0.03rem 0.05rem rgba(167, 167, 167, 0.12), 0 0.15rem 0.1rem rgba(167, 167, 167, 0.12);
}
.icon{
    width: 31rpx;
    height: 31rpx;
    margin-left: 25rpx;
}
.msg1{
    font-size: 27rpx;
    margin-left: 15rpx;
}
.msg2{
    font-size: 27rpx;
    margin-left: 25rpx;
}
.icon-down{
    height: 34rpx;
    width: 34rpx;
    font-size: 25rpx;
    padding: auto;
    color: #c8d6e5;
    position: absolute;
    left: 90%;
}
.icon-down::after{
    content: '\e60b'
}
.button{
    margin: auto;
    height: 80rpx;
    width: 95%;
    background-color: #54a0ff;
    border-radius: 50rpx;
    font-size: 35rpx;
    font-weight: 500;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.5s;
 }
 .b_click{
    background-color: #2e86de;
 }
