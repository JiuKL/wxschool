/* pages/shouye.wxss */
page{
   background-color: #ecf0f3;
}
swiper{
   width: 100%;
   height: 360rpx;
}
.haibao{
   width: 100%;
   height: 360rpx;
}
.haibao image{width: 100%;height:360rpx;}
.find-main{
   width: 90%;
   height: 400rpx;
   margin: auto;
   /* border: 1rpx #dfe6e9 solid; */
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   border-radius: 10rpx;
   box-shadow: 0 0.03rem 0.09rem rgba(0,0,0,0.12), 0 0.16rem 0.36rem rgba(0,0,0,0.12);
   position: relative;
   top: -50rpx;
   background-color: #ffffff;
}
.top{
   width: 100%;
   height: 20%;
   display: flex;
   align-items: center;
   position: relative;
}
.top-left{
   height: auto;
   width: 180rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: absolute;
   left: 50rpx;
}
.top-left>image{
   height: 25rpx;
   width: 25rpx;
}
.title{
   color: #95a5a6;
   font-size: 25rpx;
}
.title-msg{
   font-size: 25rpx;
   font-weight: 500;
}
.top-right{
   height: 100%;
   width: 200rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: absolute;
   right: 50rpx;
}
.mid{
   width: 100%;
   height: 60%;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: space-around;
}
.mid-score{
   width: 80%;
   height: 80rpx;
   margin: auto;
   display: flex;
   flex-wrap: nowrap;
   border-radius: 5rpx;
}
.mid-score>input{
   width: 90%;
   height: 90%;
   margin: auto;
   text-align: center;
   font-size:30rpx;
   background-color: #FFF;
}
.icon{
   position: absolute;
   top: 235rpx;
   left: 530rpx;
   font-size: 35rpx;
   color: #95a5a6;
   z-index: 3;
}
.placeholder{
   margin-left: -30rpx;
   margin-top: -2rpx;
   text-align: center;
   background-color: #FFF;
   font-size:30rpx;
}
.mid-title{
   width: 40%;
   display: flex;
   flex-wrap: nowrap;
   justify-content: space-around;
   margin-top: 25rpx;
   margin-bottom: 45rpx;
   font-size: 35rpx;
}
.mid-title view{
   padding: 5rpx 20rpx;
   border-top: 1rpx #bdc3c7 solid;
   border-left: 1rpx #bdc3c7 solid;
   border-right: 1rpx #bdc3c7 solid;
   border-top-left-radius: 10%;
   border-top-right-radius: 10%;
   font-size: 30rpx;
   color: #bdc3c7;
}
.end{
   width: 100%;
   height: 20%;
   position: relative;
   top: 43rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}
.button{
   height: 100%;
   width: 80%;
   background-color: #686de0;
   border-radius: 50rpx;
   font-size: 30rpx;
   color: #fff;
   display: flex;
   align-items: center;
   justify-content: center;
   transition: background-color 0.5s;
}
.b_click{
   background-color: #673AB7;
}
.bottom{
   margin-top: 50rpx;
   width: 100%;
   height: 190rpx;
   display: flex;
   flex-wrap: nowrap;
   justify-content: space-around;
   align-items: center;
}
.bottom .bottom-box{
   width: 20%;
   height: 100%;
   display: flex;
   flex-direction: column;
   align-items: center;
}
.bottom .bottom-box .img{
   width: 100%;
   height: 90%;
   display: flex;
   justify-content: center;
   align-items: center;
   border-radius: 15%;
   box-shadow: 18rpx 18rpx 30rpx rgba(0,0,0,0.12),-18rpx -18rpx 30rpx #FFF;
   transition: box-shadow 0.2x ease-in-out;
}
.bottom .bottom-box .img>image{
   width: 60%;
   height: 60%;
   transition: all 0.2s ease-out;
}
.bottom .bottom-box text{
   margin-top: 25rpx;
   font-size: xx-small;
   color: #2c3e50;
}
.bottom .bottom-box .img:active{
   box-shadow: 0 0 0 rgba(0,0,0,0.12),
   0 0 0 rgba(225,225,225,1),
   inset 25rpx 25rpx 45rpx rgba(0,0,0,0.12),
   inset -20rpx -20rpx 45rpx #fff;
}
.bottom .bottom-box .img>image:active{
   width: 55%;
   height: 55%;
   transition: all 0.2s ease-out;
}