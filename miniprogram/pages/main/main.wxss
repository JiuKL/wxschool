/* pages/shouye.wxss */
page{
   background-color: #f4f6f7;
}
.haibao{
   width: 100%;
   height: 333rpx;
}
.haibao image{width: 100%;height:333rpx;}
.find-main{
   width: 90%;
   height: 400rpx;
   margin: auto;
   /* border: 1rpx #dfe6e9 solid; */
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   border-radius: 10rpx;
   box-shadow: 0 0.03rem 0.09rem rgba(0,0,0,0.12), 0 0.16rem 0.36rem rgba(0,0,0,0.12);
   position: relative;
   top: -50rpx;
   background-color: #ffffff;
}
.top{
   width: 100%;
   height: 20%;
   display: flex;
   align-items: center;
   position: relative;
}
.top-left{
   height: auto;
   width: 180rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: absolute;
   left: 50rpx;
}
.top-left>image{
   height: 25rpx;
   width: 25rpx;
}
.title{
   color: #95a5a6;
   font-size: 25rpx;
}
.title-msg{
   font-size: 25rpx;
   font-weight: 500;
}
.top-right{
   height: 100%;
   width: 180rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: absolute;
   right: 50rpx;
}
.mid{
   width: 100%;
   height: 60%;
}
.mid-score{
   width: 80%;
   height: 80rpx;
   margin: auto;
   display: flex;
   flex-wrap: nowrap;
   border: 1rpx #dfe4ea solid;
   border-radius: 5rpx;
}
.mid-score>input{
   width: 100%;
   height: 100%;
   text-align: center;
   font-size:30rpx;
}
.icon{
   position: relative;
   left: -50rpx;
   top: 10rpx;
   font-size: 35rpx;
   color: #95a5a6;
}
.placeholder{
   text-align: center;
   font-size:30rpx;
}
.mid-title{
   width: 100%;
   height: auto;
   text-align: center;
   margin-bottom: 45rpx;
   font-size: 35rpx;
}

.end{
   width: 100%;
   height: 20%;
   border: 1rpx #000 solid;
   position: relative;
   top: 43rpx;
}